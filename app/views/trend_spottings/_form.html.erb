<%= simple_form_for(@trend_spotting, html: {class: "form-horizontal"}) do |f| %>


   <%= f.input :title %>
   <%= f.input :description, input_html: {rows: 7, style: "width: 707px;"} %>
    <%= f.input :trend_cover, as: :file, label: "Upload cover image" %>

  <%= f.input :caption, label: "About image"%>
    <%= f.input :published_at, as: :string %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn" %>
  </div>


<% end %>
