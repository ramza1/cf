<%= simple_form_for(@newsletter, :html => {:class => "form-horizontal"}) do |f| %>
    <%= f.input :title, input_html: {class: "span9"} %>
    <%= f.input :body, :as => :ckeditor, :label => false, :input_html => { :toolbar => 'Full' } %>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>