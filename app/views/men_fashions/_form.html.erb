<%= simple_form_for(@men_fashion, :html => {:class => "form-horizontal"}) do |f| %>


  <%= f.input :title %>

  <%= f.input :content, as: :text, input_html: {rows: 6, style: "width: 707px"} %>
  <%= f.input :published_at, as: :string %>

  <%= f.input :men_fashion_image, as: :file %>


  <div class="form-actions">
    <%= f.submit class: "btn" %>
  </div>
<% end %>
