<section class="span8">
  <div class="page-header">
    <h1><span>
      <%= image_tag @functional_fashion_designer.icon(:trend_small), :class => "avatar" %>
    </span>
      <%= @functional_fashion_designer.name %></h1>
  </div>
  <p>
    <%= @functional_fashion_designer.description %>
  </p>

  <% if can? :manage, @functional_fashion_designer %>
  <div class="form-actions">
    <%= link_to 'Edit', edit_functional_fashion_designer_path(@functional_fashion_designer), class: "btn" %>
    <%= link_to 'Delete', @functional_fashion_designer, method: :delete, date: {confirm: "Are you sure"}, class: "btn btn-danger" %>
  </div>
  <% end %>


  <section style="margin-top: 30px;">
    <section  id="fashion_jury">
      <header class="heading">
        <h1>FUNCTIONAL FASHION BY <%= @functional_fashion_designer.name %></h1>
      </header>
      <div class="row-fluid  jury_polaroid  ">
        <%= render @functional_fashion_designer.functional_fashions.accessible_by(current_ability).recent %>
      </div>
    </section>
  </section>
</section>


