<%= simple_form_for(@functional_fashion_designer, :html => {class: "form-horizontal"}) do |f| %>

  <%= f.input :name %>
  <%= f.input :icon, as: :file %>
  <%= f.input :description, input_html: {:rows => 10, style: "width: 757px"}  %>
  <div class="form-actions">
    <%= f.button :submit, class: "btn" %>
  </div>
<% end %>
