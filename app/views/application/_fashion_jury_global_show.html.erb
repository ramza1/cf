<section class="span8">
  <div class="page-header">
    <h1> SCORE: <%= @fashion_jury.score %>/10 <span style="float: right"><%= @fashion_jury.title %></span></h1>
  </div>
  <div class="media-center row-fluid">
    <%= image_tag @fashion_jury.fashion_jury_image(:small) %>
  </div>

  <p>
    <%= @fashion_jury.content %>
  </p>
  <div>
    <a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
    <div class="fb-like" data-send="false" data-layout="box_count" data-width="100" data-show-faces="false"></div>
  </div>
  <div class="page-header">
    <h2>
      Comments
    </h2>
    <div class="fb-comments" data-href="<%= url_for fashion_fashion_jury_url(@fashion_jury) %>" data-num-posts="10" data-width="340"></div>
  </div>

  <% if can? :manage, @fashion_jury %>
      <div class="form-actions">
        <%= link_to 'Edit', edit_fashion_jury_path(@fashion_jury), class: "btn" %>
        <%= link_to 'Delete', @fashion_jury, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
      </div>

  <% end %>
</section>


