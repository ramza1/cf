<%= simple_form_for(@slide, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :caption, as: :text, input_html: {rows: 3, class: "span4"} %>
    <%= f.input :url %>
    <%= f.input :published_at, as: :string  %>
    <%= f.input :slide_image, as: :file %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
