<%= simple_form_for(@functional_fashion, html: {class: "form-horizontal"}) do |f| %>

  <%= f.input :content, input_html: {:rows => 10, style: "width: 757px"}  %>
  <%= f.association :functional_fashion_designer %>
  <%= f.input :functional_fashion_image, label: "Upload photo", as: :file %>
  <%= f.input :published_at, as: :string %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
