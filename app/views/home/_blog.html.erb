<section class="news">
  <header  >
    <h3>latest news...</h3>
  </header>
  <div	class="news_box">

    <div class="row-fluid ">
    <% first_blog = @blogs.first %>
      <div class="">
        <div class="span6">
          <%= image_tag first_blog.blog_image(:trend_small) %>
        </div>
        <div class="span6">
          <div class="caption">
            <h4>
              <a href="<%= url_for first_blog %>" rel="tooltip" title="<%= first_blog.title %>" class="arrow_append">
                <%= first_blog.title %>
                <span class="arrow_r_after"></span>
              </a>
            </h4>
            <p><%= strip_tags truncate(first_blog.content, length: 200) %></p>
            <p class="date"><%= first_blog.published_at.strftime("%^b  %d  %I:%M%p")%></p>
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid ">

      <ul class="news-items items">
        <% @blogs.each do |blog| %>
            <% next if blog == @blogs.first %>
        <li>
          <div class="item">
            <div class="caption">
              <h4>
                <a href="<%= url_for blog %>" rel="tooltip" title="<%= blog.title %>" class="arrow_append">
                  <%= blog.title %>
                  <span class="arrow_r_after"></span>
                </a></h4>
              <p><%= strip_tags truncate(blog.content, length: 200) %></p>
              <p class="date"><%= blog.published_at.strftime("%^b  %d  %I:%M%p")%></p>
            </div>
          </div>
        </li>
         <% end %>
      </ul>
    </div>
    <div  class="more_box">
      <div  class="more">
        <span>more</span>
        <a href="<%= url_for blogs_path %>" class="more_link arrow_append">&nbsp;NEWS&nbsp;<span class="arrow_r_after"></span></a>
      </div>
    </div>
  </div>

</section>