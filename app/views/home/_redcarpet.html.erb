<% @first_set = @rp[0.. 3] %>
<% @second_set = @rp[4..5] %>
<% @last_set = @rp[6..11] %>

<section id="red_carpet_moment" class="row-fluid">
  <div  class="heading    caption heading_b">
    <h1>RED CARPET MOMENTS</h1>
  </div>
  <div class="box ">
    <div class="row-fluid   col4">
      <% @first_set.each do |first| %>
      <div class="span3">
        <div class="thumbnail" >
          <a href="#" data-original-title="<%= first.caption %>" style="display: block;"><%= link_to image_tag(first.photo(:thumb)), @redcarpet %></a>
        </div>
      </div>
      <% end %>
    </div>
    <div class="divider"></div>
    <div class="row-fluid  col4_a">
      <div class="span3">
        <div class="thumbnail"  title="<%= @second_set.first.caption %>" >
          <a href="#" data-original-title="<%= @second_set.first.caption %>" style="display: block;"><%= link_to image_tag(@second_set.first.photo(:thumb)), @redcarpet %></a>
        </div>
      </div>
      <div class="span6">
        <div class="" >
          <div class="thumbnail">
            <div class="caption">
              <h1>
                <a href="<%= url_for @redcarpet %>"   rel="tooltip" title="<%= @redcarpet.title %>" class="arrow_append">
                  <%= @redcarpet.title %>
                  <span class="arrow_r_after"></span>
                </a></h1>
            </div>
          </div>
          <div  class="more_box">
            <div  class="more">
              <span>more from</span>
              <a href="<%= url_for redcarpets_path %>" class="more_link arrow_append">&nbsp;RED CARPET MOMENTS&nbsp;<span class="arrow_r_after"></span></a>
            </div>
          </div>
        </div>
      </div>
      <div class="span3">
        <div class="thumbnail">
          <a href="#" data-original-title="<%= @second_set.last.caption %>" style="display: block;"><%= link_to image_tag(@second_set.last.photo(:thumb)), @redcarpet %></a>
        </div>
      </div>
    </div>
    <div class="divider"></div>
    <div class="row-fluid   col4">
      <% @last_set.each do |last| %>
          <div class="span3">
            <div class="thumbnail" >
              <a href="#" data-original-title="<%= last.caption %>" style="display: block;"><%= link_to image_tag(last.photo(:thumb)), @redcarpet %></a>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</section>