<div class="cover">
  <div class="caption heading_b">
    <h2>
      <a href="<%= url_for video %>" rel="tooltip" class="arrow_append" data-original-title="<%= video.title %>">
        <%= video.title %>
        <span class="arrow_r_after"></span>
      </a>
    </h2>
    <p><%=  strip_tags(truncate(video.description, :length => 340)) %></p>
    <% if video.youtube_video_id.present? %>
        <iframe class="youtube-player" type="text/html" width="100%" height="264" src="http://www.youtube.com/embed/<%= video.youtube_video_id %>" frameborder="0">
        </iframe>
    <% else %>
        <video id="example_video_1" class="video-js vjs-default-skin" controls preload="none" width="500px" height="264"
               poster="<%= video.screen_shot(:trend_small) %>"
               data-setup="{}">
          <source src="<%= video.mp4.url %>" type='video/mp4' />
          <track kind="captions" src="" srclang="en" label="English" />
        </video>
    <% end %>
    <p class="blog_meta"> posted in
      <span class="category">Video</span>
      <span class="date"> <%= video.published_at.strftime("on %^b  %d  %I:%M%p")%></span>
    </p>
  </div>

</div>